":"; exec mzscheme -r $0 "$@"

(define (run cmd)
    (display cmd)
    (newline)
    (display "=>")
    (display (eval cmd))
    (newline)
    (newline)
  )


(define (print argv)
  (display argv)
  (newline)
  (newline)
)


(run '(define (a-plus-abs-b a b)
        ((if (> b 0) + -) a b)
        ))

(run '(a-plus-abs-b 1 7))

(run '(a-plus-abs-b -1 -32))

(run '(a-plus-abs-b -32 52))

